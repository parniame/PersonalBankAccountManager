@model AddTransactionCategoryViewModel;
@{
    ViewData["Title"] = "AddTransactionCategory";
    Layout = "_Layout";
}

<div class="card center">
    <div class="card-body">
        <h5 class="card-title"> اضافه کردن نوع دسته بندی برای تراکنش ها</h5>

        <form asp-action="AddTransactionCategoryPost" asp-controller="Admin" method="post">

            <div class="row mb-3 required-field ">
                <label asp-for="Name" class="col-sm-2 col-form-label"> </label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" id="inputText">
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <fieldset class="row mb-3 required-field">
                <legend class="col-form-label col-sm-2 pt-0">نوع دسته بندی</legend>
                <div class="col-sm-2">
                    <div class="form-check ">
                        <input data-val="true" class="form-check-input" type="radio" id="IsWithdrawl" name="IsWithdrawl" value="False" checked>
                        <label class="form-check-label" asp-for="IsWithdrawl">
                        برداشت
                        </label>
                        
                        
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" id="IsWithdrawl" name="IsWithdrawl" type="radio"  value="True">
                        <label class="form-check-label" asp-for="IsWithdrawl" >
                            واریز
                        </label>
                        
                       
                    </div>

                    <span asp-validation-for="IsWithdrawl" class="text-danger"></span>

                </div>
            </fieldset>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">ثبت</button>
               
            </div>




        </form><!-- End Horizontal Form -->


    </div>
</div>


@Html.Partial("_Footer");
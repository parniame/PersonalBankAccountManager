@model AddBankAccountViewModel;
@{
    ViewData["Title"] = "AddBankAccount";
    Layout = "_Layout";
}

<div class="card center">
    <div class="card-body">
        <h5 class="card-title">  اضافه کردن حساب جدید</h5>

        <form asp-action="AddBankAccountPost" method="post">

            <div class="row mb-3 ">
                <label asp-for="@Model.BankAccountViewModel.Title" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.BankAccountViewModel.Title" class="form-control" id="inputText">
                </div>
                <span asp-validation-for="@Model.BankAccountViewModel.Title" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="@Model.BankAccountViewModel.BankId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="@Model.BankAccountViewModel.BankId" class="form-select" aria-label="Default select example">
                        @foreach (var item in Model.BankViewModels)
                        {

                            <option value="@item.Id">@Html.DisplayFor(modelItem => item.Name)</option>


                        }
                    </select>
                </div>
                <span asp-validation-for="@Model.BankAccountViewModel.BankId" class="text-danger"></span>
            </div>

            <div class="row mb-3 ">
                <label asp-for="@Model.BankAccountViewModel.Amount" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.BankAccountViewModel.Amount" class="form-control" id="inputText">
                </div>
                <span asp-validation-for="@Model.BankAccountViewModel.Amount" class="text-danger"></span>
            </div>
            <div class="row mb-3 ">
                <label asp-for="@Model.BankAccountViewModel.CardNumber" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.BankAccountViewModel.CardNumber" class="form-control" id="inputText">
                </div>
                <span asp-validation-for="@Model.BankAccountViewModel.CardNumber" class="text-danger"></span>
            </div>
            <div class="row mb-3 ">
                <label asp-for="@Model.BankAccountViewModel.Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.BankAccountViewModel.Description" class="form-control" id="inputText">
                </div>
                <span asp-validation-for="@Model.BankAccountViewModel.Description" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">ثبت</button>
                <button type="reset" class="btn btn-secondary">پاک کردن</button>
            </div>




        </form><!-- End Horizontal Form -->


    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model TransactionPlanViewModel;
@{
    ViewData["Title"] = "AddTransactionPlan";
    Layout = "_Layout";
}

<div class="card center">
    <div class="card-body">
        <h5 class="card-title"> ساخت پلنر تراکنش</h5>

        <form asp-action="AddTransactionPlanPost" >

            <div class="row mb-3 ">
                <label asp-for="UniqueName" class="col-sm-2 col-form-label"> </label>
                <div class="col-sm-10">
                    <input asp-for="UniqueName" class="form-control" id="inputText">
                </div>
                <span asp-validation-for="UniqueName" class="text-danger"></span>
            </div>
            <div class="row mb-3 ">
                <label asp-for="Amount" class="col-auto col-form-label"> </label>
                <div class="col-auto">
                    <input asp-for="Amount" class="form-control" id="inputText">
                </div>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <fieldset class="row mb-3">
                <legend class="col-form-label col-sm-2 pt-0">نوع دسته بندی</legend>
                <div class="col-sm-2">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="IsWithdrawl" name="IsWithdrawl" id="gridRadios1" value="False" checked>
                        <label class="form-check-label" asp-for="IsWithdrawl">
                            برداشت
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsWithdrawl" type="radio" name="IsWithdrawl" id="gridRadios2" value="True">
                        <label class="form-check-label" asp-for="IsWithdrawl">
                            واریز
                        </label>
                    </div>
                    <span asp-validation-for="IsWithdrawl" class="text-danger"></span>

                </div>
            </fieldset>
            <div class="row mb-3 ">
                <label asp-for="TillThisDate" class="col-sm-2 col-form-label"> </label>
                <div class="col-sm-10">
                    <input asp-for="TillThisDate" class="form-control" id="inputText">
                </div>
                <span asp-validation-for="TillThisDate" class="text-danger"></span>
            </div>
            <div class="row mb-3 ">
                <label asp-for="Description" class="col-sm-2 col-form-label"> </label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" id="inputText">
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">ثبت</button>
                <button type="reset" class="btn btn-secondary">پاک کردن</button>
            </div>




        </form><!-- End Horizontal Form -->


    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@Html.Partial("_Footer");
